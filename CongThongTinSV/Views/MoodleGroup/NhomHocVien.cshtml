@using Kendo.Mvc.UI;
@using CongThongTinSV.Models;
@{
    ViewBag.Title = "Quản lý nhóm và phân tổ nhóm học viên trên Moodle";
}

@(Html.Kendo().DropDownList()
    .Name("HocKy")
    .OptionLabel("Chọn học kỳ")
    .HtmlAttributes(new { style = "width:180px" })
    .DataTextField("Text")
    .DataValueField("Value")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("GetMoodleHocKy", "MoodleCategory");
        }).ServerFiltering(true);
    })
    .Events(e =>
    {
        e.Change("selectLopHocPhan");
    })
)

@(Html.Kendo().DropDownList()
    .Name("LopHocPhan")
    .OptionLabel("Chọn lớp học phần")
    .HtmlAttributes(new { style = "width:320px" })
    .DataTextField("Text")
    .DataValueField("Value")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("GetMoodleLopHocPhan", "MoodleCourse").Data("filterLopHocPhan");
        }).ServerFiltering(true);
    })
    .Events(e =>
    {
        e.Change("loadGrid");
    })
    .Enable(false)
    .AutoBind(false)
    .CascadeFrom("HocKy")
)
<div>
    @(Html.Kendo().DropDownList()
        .Name("Nhom")
        .OptionLabel("Chọn nhóm")
        .HtmlAttributes(new { style = "width:150px" })
        .DataTextField("Text")
        .DataValueField("Value")
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("GetMoodleNhom", "MoodleGroup").Data("filterGrid");
            }).ServerFiltering(true);
        })
        .Enable(false)
        .AutoBind(false)
        .CascadeFrom("LopHocPhan")
    )
    @Html.TextBox("TenNhom", "", new { placeholder = "Nhập tên nhóm", style = "width:120px" })
    @Html.TextBox("MoTaNhom", "", new { placeholder = "Mô tả nhóm", style = "width:200px" })
    <button id="createGroup">Tạo nhóm</button>
    <button id="deleteGroup">Xóa nhóm</button>
</div>
@(Html.Kendo().Grid<CongThongTinSV.Models.MoodleNhom>()
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(c => c.ID_nhom)
            .ClientTemplate("<input type='checkbox' class='chkbx' value='#= ID_nhom #'/>")
            .HeaderTemplate("<input type='checkbox' id='masterCheckBox'/>")
            .Width(40)
            .Title("")
            .IncludeInMenu(false)
            .HeaderHtmlAttributes(new { style = "text-align:center" })
            .HtmlAttributes(new { style = "text-align:center" })
            .Filterable(false).Groupable(false).Sortable(false);
        columns.Bound(c => c.Ten_nhom).Width(100);
        columns.Bound(c => c.Mo_ta).Width(105);
        columns.Bound(c => c.Ten_to);
    })
    .Pageable(pager => pager.PageSizes(new int[] { 5, 10, 20, 50, 80 }).Refresh(true).Input(true).Numeric(false))
    .Sortable(s => s.SortMode(GridSortMode.MultipleColumn))
    .Filterable()
    .Scrollable()
    .Groupable()
    .Resizable(r => r.Columns(true))
    .Reorderable(ro => ro.Columns(true))
    .Navigatable()
        //.ColumnMenu(menu => menu.Enabled(true).Sortable(false))
    .Selectable(s => s.Mode(GridSelectionMode.Single))
        //.HtmlAttributes(new {style = "height:400px"})
    .Events(e =>
    {
        e.DataBound("onDataBound");
    })
    .DataSource(
        dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("GetNhom", "MoodleGroup").Data("filterGrid"))
            .PageSize(50)
    )
)
<div>
    @(Html.Kendo().DropDownList()
        .Name("To")
        .OptionLabel("Chọn tổ")
        .HtmlAttributes(new { style = "width:150px" })
        .DataTextField("Text")
        .DataValueField("Value")
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("GetMoodleTo", "MoodleGroup").Data("filterGrid");
            }).ServerFiltering(true);
        })
        .Enable(false)
        .AutoBind(false)
        .CascadeFrom("LopHocPhan")
    )
    <button id="assignGrouping">Gán nhóm</button>
    <button id="unsignGrouping">Hủy gán nhóm</button>
    <button id="deleteGrouping">Xóa tổ</button>
</div>
<div>
