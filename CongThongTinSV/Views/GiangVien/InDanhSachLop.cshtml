@using Kendo.Mvc.UI;
@{
    ViewBag.Title = "InDanhSachLop";
}


@Html.Label("NamHoc", "Năm học:")
@(Html.Kendo().DropDownList()
    .Name("NamHoc")
    //.Placeholder("Chọn năm học")
    .DataTextField("Text")
    .DataValueField("Value")
    //.SelectedIndex(0)
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("GetNamHoc", "JSON");
        }).ServerFiltering(true);
    })
    //.Events(e =>
    //{
    //    e.Select("NamHoc_Select");
    //})
)
<script type="text/javascript">
    function reloadDotHoc() {
        $("#HocKy").data("kendoComboBox").value("");
    }
    function HocKy_Select() {
        $("#DotHoc").data("kendoComboBox").value("");
    }
    function filterHocKy() {
        return {
            NamHoc: $("#NamHoc").val()
        }
    }
    function filterDotHoc() {
        return {
            NamHoc: $("#NamHoc").val(),
            HocKy: $("#HocKy").val()
        }
    }
</script>
@Html.Label("HocKy", "Học kỳ:")
@(Html.Kendo().DropDownList()
    .Name("HocKy")
    .Filter(FilterType.Contains)
    //.Placeholder("Chọn học kỳ")
    .DataTextField("Text")
    .DataValueField("Value")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("GetHocKy", "JSON")
                .Data("filterHocKy");
        }).ServerFiltering(true);
    })
    //.SelectedIndex(0)
    .Enable(false)
    .AutoBind(false)
    .CascadeFrom("NamHoc")
)
@Html.Label("DotHoc", "Đợt học:")
