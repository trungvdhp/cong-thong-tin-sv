@using CongThongTinSV.Models
@{
    ViewBag.Title = "Thông tin tài khoản moodle Elearning";
}
@{
    MoodleUserProfileResponse userProfile = ViewBag.UserProfile;
}
<h2 style="text-align:center">@userProfile.fullname</h2>
<table style="color:black" summary="">
    <tr>
        <td rowspan="8" style="vertical-align: top;">
                <a href="UserProfile?userid=@userProfile.id">
                <img src=@userProfile.profileimageurl alt="Picture of " + @userProfile.fullname title="Picture of " + @userProfile.fullname class="userpicture defaultuserpic" width="100" height="100" />
                </a>
        </td>
    </tr>
    <tr>
        <td>Country:</td>
        <td>@userProfile.country</td>
    </tr>
    <tr>
        <td>City/town:</td>
        <td>@userProfile.city</td>
    </tr>
    <tr>
        <td>Email address:</td>
        <td>
            <a href="mailto:@userProfile.email"  title="">@userProfile.email</a>
        </td>
    </tr>
    <tr>
        <td>@userProfile.customfields[0].name:</td>
        <td>
            @{
                if (userProfile.customfields[0].value == "0"){
                    <text>Not set</text>
                }
                else{
                    <text>userProfile.customfields[0].value</text>
                }
            }
        </td>
    </tr>
    <tr>
        <td>Course profiles:</td>
        <td>
            @{
                int len = userProfile.enrolledcourses.Count-1;
                for(int i=0; i<len; i++)
                {
                    <a href="http://" >@userProfile.enrolledcourses[i].fullname</a><text>,&nbsp</text>
                }
                <a href="http://" >@userProfile.enrolledcourses[len].fullname</a>
            }</td>
    </tr>
    <tr>
        <td>First access:</td>
        <td>@CongThongTinSV.Controllers.UtilityController.ConvertToDetailDateTimeString(userProfile.firstaccess)</td></tr>
    <tr>
        <td>Last access:</td>
        <td>@CongThongTinSV.Controllers.UtilityController.ConvertToDetailDateTimeString(userProfile.lastaccess)</td>
    </tr>
</table>