@using Kendo.Mvc.UI;
@using CongThongTinSV.Models;
@{
    ViewBag.Title = "Quản lý danh mục Học kỳ trên Moodle";
}

@(Html.Kendo().Grid<CongThongTinSV.Models.MoodleHocKy>()
    .Name("Grid")
    .Columns(columns => {
        columns.Bound(c => c.ID).Groupable(false)
            .ClientTemplate("<input type='checkbox'  class='chkbx' value='#= ID #'/>")
            .HeaderTemplate("<input type='checkbox' id='masterCheckBox'/>")
            .Width(40)
            .Title("")
            .HeaderHtmlAttributes(new { style = "text-align:center" })
            .HtmlAttributes(new { style = "text-align:center" })
            .Filterable(false).Groupable(false).Sortable(false);
        columns.Bound(c => c.ID_moodle).Width(105);
        columns.Bound(c => c.Dot).Width(80).HtmlAttributes(new { style = "text-align:center" });
        columns.Bound(c => c.Hoc_ky).Width(80).HtmlAttributes(new { style = "text-align:center" });
        columns.Bound(c => c.Nam_hoc);
    })
   .Pageable(pager => pager.PageSizes(new int[]{5, 10, 20, 50}).Refresh(true).Input(true).Numeric(false))
    .Sortable(s => s.SortMode(GridSortMode.MultipleColumn))
    .Filterable()
    .Scrollable()
    .Groupable()
    .Resizable(r => r.Columns(true))
    .Reorderable(ro => ro.Columns(true))
    .Navigatable()
    //.ColumnMenu(menu => menu.Enabled(true).Sortable(false))
    .Selectable(s => s.Mode(GridSelectionMode.Single))
    .Events(e => {
                e.DataBound("onDataBound");
            })
    .DataSource(
        dataSource => dataSource
            .Ajax()
            .Read(read => read.Action("GetHocKy", "MoodleCategory"))
            .PageSize(5)
    )
)
<div>
    <button id="create" class="k-button">Tạo danh mục</button>
    <button id="delete" class="k-button">Xóa danh mục</button>
</div>

<script type="text/javascript">
    var selectedVals = [];

    function loadGrid() {
        selectedVals.splice(0, selectedVals.length);
        gridRefresh();
    }
    // on data bound, check checkboxes
    function onDataBound(e) {
        checkCells(selectedVals, '#masterCheckBox', '#Grid :checkbox');
    }
    // on click checkbox cell in a row
    $(function () {
        $('#Grid').on('click', '.chkbx', function () {
            var state = $(this).is(':checked');
            var grid = $('#Grid').data().kendoGrid;
            var dataItem = grid.dataItem($(this).closest('tr'));

            checkVal(dataItem.ID, state, selectedVals);
            $('#masterCheckBox').attr('checked', isCheckedAll('#Grid :checkbox'));
        })
    })

    $('#masterCheckBox').click(function () { checkAll(this, '#Grid :checkbox'); })

    function gridRefresh() {
        $("#Grid").data("kendoGrid").dataSource.read();
    }
    $("#create").click(function () {
        if (selectedVals.length == 0) {
            alert('Vui lòng chọn một học kỳ!');
            return;
        }

        processing('/MoodleCategory/CreateHocKy/?selectedVals='+ selectedVals, "Đang tạo các danh mục học kỳ đã chọn trên Moodle...", gridRefresh);
    })

    $("#delete").click(function () {
        if (selectedVals.length == 0) {
            alert('Vui lòng chọn một học kỳ!');
            return;
        }

        if (confirm('Bạn muốn xóa toàn bộ các danh mục học kỳ đã chọn trên Moodle?')) {
            processing('/MoodleCategory/DeleteHocKy/?selectedVals='+ selectedVals, "Đang xóa các danh mục học kỳ đã chọn trên Moodle...", gridRefresh)
        }
    })

</script>